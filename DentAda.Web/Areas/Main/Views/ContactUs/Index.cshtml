@{
    ContactUsVM contactUs = ViewBag.ContactUs;
}


<!-- ***** Breadcrumb Area Start ***** -->
<div class="breadcumb-area bg-img bg-gradient-overlay" style="background-image: url(/frontend/img/bg-img/12.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <h2 class="title">İLETİŞİM</h2>
            </div>
        </div>
    </div>
</div>

<!-- ***** Breadcrumb Area End ***** -->
<!-- ***** Contact Area Start ***** -->
<section class="dento-contact-area mt-50 mb-100">
    <div class="container">

        <div class="row  mb-30">
            <!-- Contact Information -->
            <div class="col-12 col-md-4">
                <div class="contact-information">
                    <h5>Adres</h5>
                    <p>@contactUs.Address</p>

                    <h5>Telefon</h5>
                    <p>@contactUs.Phone</p>

                    @if (contactUs.Fax != null)
                    {
                        <h5>Faks</h5>
                        <p>@contactUs.Fax</p>
                    }
                    @if (contactUs.GSM != null)
                    {
                        <h5>GSM</h5>
                        <p>@contactUs.GSM</p>
                    }

                    <h5>E-Posta</h5>
                    <p class="mb-0">@contactUs.Email</p>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-12 col-md-8">
                <div class="contact-form">
                    <!-- Section Heading -->
                    <div class="section-heading">
                        <h2>Bize Ulaşın</h2>
                        <div class="line"></div>
                    </div>
                    <!-- Form -->
                    <form action="#" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" name="message-name" class="form-control mb-30" placeholder="Ad">
                            </div>
                            <div class="col-lg-6">
                                <input type="email" name="message-surname" class="form-control mb-30" placeholder="Soyad">
                            </div>
                            <div class="col-lg-6">
                                <input type="text" name="message-email" class="form-control mb-30" placeholder="E-Posta">
                            </div>
                            <div class="col-lg-6">
                                <input type="email" name="message-phone" class="form-control mb-30" placeholder="Telefon">
                            </div>
                            <div class="col-12">
                                <textarea name="message" class="form-control mb-30" placeholder="Mesajınız"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn dento-btn">Mesaj Gönder</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="google-maps">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3074.888993279117!2d32.14225631563087!3d39.58465211374491!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d25a269c13922b%3A0xabb2ec41c5e4971e!2zRGVudEFkYSBBxJ_EsXogdmUgRGnFnyBTYcSfbMSxxJ_EsSBQb2xpa2xpbmnEn2k!5e0!3m2!1str!2str!4v1565050264682!5m2!1str!2str" allowfullscreen></iframe>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- ***** Contact Area End ***** -->