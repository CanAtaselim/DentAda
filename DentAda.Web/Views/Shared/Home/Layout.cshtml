<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Dent Ada Ağız ve Diş Sağlığı Polikiliniği">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title -->
    <title>Dent Ada Ağız ve Diş Sağlığı Polikiliniği</title>
    @RenderSection("pageLevelStyles", required: false)
    @RenderSection("pageLevelInlineStyles", required: false)

    <!-- Favicon -->
    <link rel="icon" href="./img/core-img/favicon.ico">
    <!-- Core Stylesheet -->
    <link rel="stylesheet" href="/frontend/style.css">

</head>

<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="preload-content">
            <div id="dento-load"></div>
        </div>
    </div>

    <!-- ***** Header Area Start ***** -->
    @Html.Partial("~/Views/Shared/Home/_Header.cshtml")
    <!-- ***** Header Area End ***** -->
    @RenderBody()
    <!-- ***** Blog Area End ***** -->
    <!-- ***** Footer Area Start ***** -->
    @Html.Partial("~/Views/Shared/Home/_Footer.cshtml")
    <!-- ***** Footer Area End ***** -->
    <!-- ******* All JS ******* -->
    <!-- jQuery js -->
    <script src="/frontend/js/jquery.min.js"></script>
    <script src="/frontend/js/popper.min.js"></script>
    <script src="/frontend/js/bootstrap.min.js"></script>
    <script src="/frontend/js/dento.bundle.js"></script>
    <script src="/frontend/js/default-assets/active.js"></script>
    <script>
        jQuery(document).ready(function ()
        {
            $(".booking-btn").click(function ()
            {
                scrollToAnchor($(".bookingContent"))
            })
            function scrollToAnchor(html)
            {
                $('html,body').animate({ scrollTop: html.offset().top - 150 }, 'slow');
            }
        });
    </script>
    @RenderSection("pageLevelPlugins", required: false)
    @RenderSection("pageLevelScripts", required: false)
    @RenderSection("pageLevelInlineScripts", required: false)

</body>

</html>